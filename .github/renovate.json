{
  "$schema": "http://json.schemastore.org/renovate",
  "extends": ["config:base"],
  "automerge": true,
  "automergeType": "branch",
  "baseBranches": ["master"],
  "semanticCommits": true,
  "semanticCommitScope": "deps",
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "automergeType": "branch",
    "schedule": ["before 5am"]
  },
  "rangeStrategy": "update-lockfile",
  "commitMessage": "{{{commitMessagePrefix}}} ðŸ“¦ {{{commitMessageAction}}} {{{commitMessageTopic}}} {{{commitMessageExtra}}} {{{commitMessageSuffix}}}"
}
